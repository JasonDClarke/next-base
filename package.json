{
  "name": "base-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "start-for-cypress": "cross-env CYPRESS=true next start -p 4000",
    "start": "next start -p 4000",
    "lint": "next lint",
    "prepare": "husky",
    "typescript": "tsc",
    "prettier": "prettier --write . --ignore-path .prettierignore",
    "test": "jest --coverage",
    "cypress": "cypress run",
    "cypress:update-snapshots": "cypress run --env updateSnapshots=true",
    "cypress:open": "cypress open",
    "cypressTestProd": "start-server-and-test start-for-cypress http://localhost:4000 cypress",
    "cypressTestProd:update-snapshots": "start-server-and-test start-for-cypress http://localhost:4000 cypress:update-snapshots",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@next/bundle-analyzer": "^15.1.4",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@sentry/nextjs": "^8.45.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cypress-axe": "^1.5.0",
    "lucide-react": "^0.468.0",
    "next": "^15.1.2",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@simonsmith/cypress-image-snapshot": "^9.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "axe-core": "^4.10.2",
    "cross-env": "^7.0.3",
    "cypress": "^13.17.0",
    "dotenv": "^16.4.7",
    "eslint": "^9",
    "eslint-config-next": "15.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.3.0",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "start-server-and-test": "^2.0.9",
    "tailwindcss": "^3.4.1",
    "ts-mockery": "^1.2.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
